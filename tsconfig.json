{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "dom"
    ],
    "outDir": "packages",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": [
    "packages/**/*.d.ts"
  ],
  "include": [
    "packages/**/*.ts",
    "global.d.ts"
  ]
}